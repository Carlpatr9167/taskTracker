<div class="section left-panel">
    <div class="left-panel-content top">
       <h1>Projects</h1>
       <div class="in-progress">
        <table>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><button>Open</button></td>
            <td><button>Delete</button></td>
          </tr>
          <% end %> 
        </table>
       </div>
    </div>
    <div class="left-panel-content center">
      <h2>Create New</h2>
      <div class="submission">
      <%= form_with url: '/home/create_item', method: :post, class: 'project-form', local: true do |form| %>
        <%= form.label :name, 'Name:' %><br>
        <%= form.text_field :name, placeholder: 'Enter name', required: true %><br>
    
        <%= form.label :type, 'Type:' %><br>
        <%= form.select :type, [['Tasks', 'tasks'], ['Projects', 'projects']], {}, class: 'dropdown' %><br>
    
        <%= form.submit 'Create New' %>
      <% end %>
    </div>
    </div>
</div>
<div class="section center-panel">
  <div class="center-panel-content top">
  <div class="time">
    <h1><%= Time.now.strftime("%-I:%M") %></h1>
  </div>
  </div>
  <div class="center-panel-content bottom">
   <table>
        <tr>
          <th>Task</th>
          <th>Start Time</th>
          <th>Status</th>
          <th>End Time</th>
        </tr>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.start_time %></td>
            <td>status</td>
            <% if task.end_time %>
            <td><%= task.end_time %></td>
            <% else %>
            <td><%= button_to 'Mark Complete', edit_task_path(task.id), method: :patch, class: 'mark-complete-button' %></td>
            <% end %>
          </tr>
          <% end %> 
      </table>
  </div> 
  </div>
</div>
<div class="section right-panel">
    <div class="cal">
    <%= month_calendar do |date| %>
    <%= date.day %>
    <% end %>
  </div>
</div>